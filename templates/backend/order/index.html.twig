{% extends 'admin.html.twig' %}
{% block title %}SANT'ART BUSINESS{% endblock %}
{% block Ecommerce %}active{% endblock %}
{% block commande_index %}active{% endblock %}

{% block body %}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Listes des produits</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="{{ path('app_dashboard') }}">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_order_index') }}" class="btn btn-primary text-white">Ajouter</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Liste de tous les commandes</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="basic-datatables" class="display table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>N° Commande</th>
                                        <th>Date commande</th>
                                        <th>Nom complet</th>
                                        <th>Adresse</th>
                                        <th>Prix total</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for order in orders %}
                                    <tr>
                                        <td>{{ order.numero }}</td>
                                        <td>{{ order.createdAt ? order.createdAt|date('H:i d/m/Y') }}</td>
                                        <td>{{ order.nom }} {{ order.prenom }}</td>
                                        <td>{{ order.adresse }}</td>
                                        <td>{{ order.prixtotal|number_format(2, '.', '.') }}FCFA</td>
                                        <td class="text-center">
                                            <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-primary btn-sm">
                                                <i class="fas fa-eye"></i> Détails
                                            </a>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="6">no records found</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}